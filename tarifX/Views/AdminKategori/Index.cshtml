@model IEnumerable<tarifX.Models.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_adminView.cshtml";
}
<br />
<h2>Yemek Kategorileri</h2>

<br />

<div class="row">
    <div class="col-md-3">
        <a href="/AdminKategori/Create" class="btn btn-block btn-success">Kategori Ekle</a>
    </div>
</div>

<!-- table primary start -->
<div class="col-lg-12 mt-5">
    <div class="card">
        <div class="card-body">
            <h4 class="header-title">Kategoriler</h4>
            <div class="single-table">
                <div class="table-responsive">
                    <table class="table text-center">
                        <thead class="text-uppercase bg-primary">
                            <tr class="text-white">

                                <th scope="col">İsim</th>
                                <th scope="col">Sil</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>@item.Name</td>
                                    <td><a href="/AdminKategori/Delete/@item.ID"><i class="ti-trash"></i></a></td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- table primary end -->